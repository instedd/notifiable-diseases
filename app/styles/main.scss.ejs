a.editable-click {
  color: black !important;
  text-decoration: none !important;
  border-bottom: 0px !important;
}

.new-report {
  @extend .pull-right;
  margin-top: -25px;
}

.add-new-visualization {
  @include box-shadow(0px -1px 3px 1px rgba(0, 0, 0, 0.2)inset);
  border-radius: 4px;
  padding: 20px;
  background: #eaeaea;

  .add_new {
    display: block;
    height: 440px;
    position: relative;

    &:before {
      content:'';
      display: block;
      background: #aaaaaa;
      color: #eaeaea;
      border-radius:50%;
      height: 50px;
      width: 50px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -25px 0 0 -25px;
    }

    &:after {
      content:'+';
      font-size: 50px;
      line-height: 50px;
      font-weight: bold;
      display: block;
      color: #eaeaea;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -30px 0 0 -15px;
    }

  }
  &:hover {
    background: #e2e2e2;

    .chart_type div {
      background: #e2e2e2;
    }
  }
  .chart_type {
    @include box-sizing(border-box);
    position: absolute;
    top: 40%;
    left: 0;
    width: 100%;
    padding: 0 25px;

    div {
      text-align: center;
      background: #eaeaea;
      font-weight: bold;
    }
  }
}

