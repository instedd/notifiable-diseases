// TODO: rename nd-trendline to something more generic (it is used for all charts)
.nd-trendline {
  position: relative;
  padding-top: 30px;
  min-height: 400px;
  max-height: 400px;

  .actions {
    display: none;
    position: absolute;
    top: 20px;
    right: 30px;
    z-index: 1;
  }

  .first-in-trendline {
    margin-top: 40px;
  }

  &:hover .actions {
    display: block;
  }
}
.nd-map {
  height: 320px;
  cursor: default;

  .nd-map-marker {
    width: 25px !important;
    height: 25px !important;
    margin: -12.5px -12.5px !important;

    &.red    { background-image: url('../images/locationRed.png')    }
    &.yellow { background-image: url('../images/locationYellow.png') }
    &.green  { background-image: url('../images/locationGreen.png')  }
  }
}

.add-new-visualization {
  @include box-shadow(0px -1px 3px 1px rgba(0, 0, 0, 0.2)inset);
  border-radius: 4px;
  padding: 20px;
  background: #eaeaea;

  .add_new {
    display: block;
    height: 360px;
    position: relative;

    &:before {
      content:'';
      display: block;
      background: #aaaaaa;
      color: #eaeaea;
      border-radius:50%;
      height: 50px;
      width: 50px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -25px 0 0 -25px;
    }

    &:after {
      content:'+';
      font-size: 50px;
      line-height: 50px;
      font-weight: bold;
      display: block;
      color: #eaeaea;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -30px 0 0 -15px;
    }

  }
  &:hover {
    background: #e2e2e2;

    .chart_type div {
      background: #e2e2e2;
    }
  }
  .chart_type {
    @include box-sizing(border-box);
    position: absolute;
    top: 40%;
    left: 0;
    width: 100%;
    padding: 0 25px;

    div {
      text-align: center;
      background: #eaeaea;
      font-weight: bold;

      .chart_button {
        background-image: url('../images/chart_icons.png');
        background-repeat: no-repeat;
        display: inline-block;
        width: 58px;
        height: 54px;

        &.trendline          { background-position: 0px 0px }
        &.population_pyramid { background-position: -119px 0px }
        &.map                { background-position: -239px 0px }
      }
    }

  }
}


.filters-list {
  @include box-shadow(0 1px 1px 1px rgba(0, 0, 0, 0.1));
  background: #ffffff;
  border-radius: 5px;
  margin-bottom: 15px;

  .filters-header {
    padding: 10px 15px;
    position: relative;

    a {
      font-size: 12px;
      line-height: 20px;
    }

    &:after {
      content: '';
      display: block;
      position: absolute;
      width: 100%;
      height: 7px;
      left: 0;
      bottom: -7px;
      @include gradient-vertical(#e5e5e5, #fcfcfc);
      @include box-sizing(content-box);
    }

  }
  .filter {
    background: url("../images/f_arrow_sep01.png") no-repeat right top;
    padding: 0 10px 0 15px;

    &:after {
      @include transition(opacity ease 0s 0s);
      opacity:0;
    }

    .filter-title {
      padding: 15px 0;
      position: relative;
      cursor: pointer;
      strong {
        padding: 5px 0 5px 30px ;
        &.all {
          background: url("../images/f_all.png") no-repeat;
        }
        &.date {
          background: url("../images/f_date.png") no-repeat;
        }
        &.age_group {
          background: url("../images/f_age.png") no-repeat;
        }
        &.gender {
          background: url("../images/f_gender.png") no-repeat;
        }
        &.ethnicity {
          background: url("../images/f_ethnicity.png") no-repeat;
        }
        &.result {
          background: url("../images/f_condition.png") no-repeat;
        }
        &.location {
          background: url("../images/f_location.png") no-repeat;
        }
      }
      .count {
        @include box-sizing(border-box);
        font-size: 11px;
        line-height: 50px;
        color: #999999;
        text-align: center;
        border-left: 1px solid #cdcdcd;
        border-right: 1px solid #cdcdcd;
        display: block;
        width: 60px;
        height: 49px;
        position: absolute;
        right: 5px;
        top: 1px;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      .remove {
        @include border-right-radius(3px);
        @include box-shadow(1px 1px 1px 0px rgba(0, 0, 0, 0.1));
        background: url("../images/ic-delete-black.png") no-repeat center #ffffff;
        width: 32px;
        height: 30px;
        display: none;
        position: absolute;
        right: -30px;
        top: 6px;

        &:hover {
          display:block;
        }
      }

      .selected-desc {
        font-size: 11px;
        display: inline-block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        vertical-align: middle;
      }
      @media (min-width: 1230px) {
        .selected-desc {
          width: 40%;
        }
      }
      @media (min-width: 1400px) {
        .selected-desc {
          width: 50%;
        }
      }
      @media (min-width: 1600px) {
        .selected-desc {
          width: 58%;
        }
      }
    }
    &.expanded {
      background-color: #cccccc;
      padding-bottom: 20px;

      .filter-title {
        position: relative;
        margin-bottom: 15px;
        .count {
          border: none;
          color: #333333;
        }
        &:after {
          content: '';
          display: block;
          position: absolute;
          width: 100%;
          height: 7px;
          left: 0;
          bottom: -7px;
          padding: 0 10px 0 15px;
          margin-left: -15px;
          @include gradient-vertical(#b7b7b7, #cccccc);
          @include box-sizing(content-box);
        }
      }

      & + .filter {
        background: url("../images/f_arrow_sep02.png") no-repeat right top;
        &:after {
          opacity: 0 !important;
        }
      }

      &.last {
        margin-bottom: -10px;
      }
      .remove {
        background-color: #cccccc;
      }
      &.empty {

        .count {
          background: none;
          color:#ff6600;
          &:before {
            display:none;
          }
        }
      }
    }

    &:hover .remove {
      display: block;
    }

    &.first {
      background-image: none;

      .filter-title {
        cursor: default;
        span {
          @include border-top-radius(4px);
          line-height: 30px;
          border-top: 1px solid #cdcdcd;
          top: 15px;
          height: 35px;
        }
      }
      + hr {
        margin-top: 0;
      }
    }

    &.last {
      .filter-title .count {
          @include border-bottom-radius(4px);
          border-bottom: 1px solid #cdcdcd;
      }
    }

    .instructions {
      font-size: 12px;
      padding-bottom: 10px;
      color: #666;
    }
    &.empty {

      .count {
        background: #ff6600;
        color: #ffffff;
        border-bottom: 1px solid #ff6600;

        &:before {
          content:'';
          display: block;
          position: absolute;
          left: 50%;
          margin-left: -27px;
          top: 0px;
          width: 0;
          height: 0;
          border-style: solid;
          border-width: 8px 27px 0 27px;
          border-color: #ffffff transparent transparent transparent;
          z-index: 5;
        }
      }
      & + .filter {
        position: relative;
        &:after {
          @include transition(opacity ease-in .5s .15s);
          content:'';
          display: block;
          position: absolute;
          right: 18px;
          top: 0;
          width: 0;
          height: 0;
          border-style: solid;
          border-width: 8px 27px 0 27px;
          border-color: #ff6600 transparent transparent transparent;
          z-index: 5;
          opacity: 1;
        }
      }
    }
  }
  hr {
    margin: 10px 0;
  }
  .add-new-filter {
    font-weight: bold;
    padding: 0 15px 10px 15px;

    a {
      /*color: #999999;*/
      text-decoration: none !important;
      span {
        font-size: 20px;
      }
    }

    div {
      padding-top: 5px;
      a {
        text-indent: -999em;
        display: inline-block;
        margin-right: 10px;
        width: 40px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid #eaeaea;
        overflow: hidden;

        &.date {
          background: url("../images/f_date.png") no-repeat center;
        }
        &.age_group {
          background: url("../images/f_age.png") no-repeat center
        }
        &.gender {
          background: url("../images/f_gender.png") no-repeat center;
        }
        &.ethnicity {
          background: url("../images/f_ethnicity.png") no-repeat center;
        }
        &.result {
          background: url("../images/f_condition.png") no-repeat center;
        }
        &.location {
          background: url("../images/f_location.png") no-repeat center;
        }
      }
    }
  }
}
