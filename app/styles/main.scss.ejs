a.editable-click {
  color: black !important;
  text-decoration: none !important;
  border-bottom: 0px !important;
}

.new-report {
  @extend .pull-right;
  margin-top: -25px;
}

.nd-trendline {
  position: relative;
  padding-top: 30px;
  min-height: 400px;
  max-height: 400px;

  .actions {
    display: none;
    position: absolute;
    top: 20px;
    right: 30px;
    z-index: 1;
  }

  .ng-scope {
    margin-top: 40px;
  }

  &:hover .actions {
    display: block;
  }
}

.add-new-visualization {
  @include box-shadow(0px -1px 3px 1px rgba(0, 0, 0, 0.2)inset);
  border-radius: 4px;
  padding: 20px;
  background: #eaeaea;

  .add_new {
    display: block;
    height: 360px;
    position: relative;

    &:before {
      content:'';
      display: block;
      background: #aaaaaa;
      color: #eaeaea;
      border-radius:50%;
      height: 50px;
      width: 50px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -25px 0 0 -25px;
    }

    &:after {
      content:'+';
      font-size: 50px;
      line-height: 50px;
      font-weight: bold;
      display: block;
      color: #eaeaea;
      position: absolute;
      left: 50%;
      top: 50%;
      margin: -30px 0 0 -15px;
    }

  }
  &:hover {
    background: #e2e2e2;

    .chart_type div {
      background: #e2e2e2;
    }
  }
  .chart_type {
    @include box-sizing(border-box);
    position: absolute;
    top: 40%;
    left: 0;
    width: 100%;
    padding: 0 25px;

    div {
      text-align: center;
      background: #eaeaea;
      font-weight: bold;
    }
  }
}


.filters-list {
  @include box-shadow(0 1px 1px 1px rgba(0, 0, 0, 0.1));
  background: #ffffff;
  border-radius: 5px;
  margin-bottom: 15px;

  .filters-header {
    padding: 10px 15px;
    position: relative;

    a {
      font-size: 12px;
      line-height: 20px;
    }

    &:after {
      content: '';
      display: block;
      position: absolute;
      width: 100%;
      height: 7px;
      left: 0;
      bottom: -7px;
      @include gradient-vertical(#e5e5e5, #fcfcfc);
      @include box-sizing(content-box);
    }

  }
  .filter {
    background: url("../images/f_arrow_sep01.png") no-repeat right top;
    padding: 0 10px 0 15px;

    .filter-title {
      padding: 15px 0;
      position: relative;
      cursor: pointer;
      strong {
        padding: 5px 0 5px 30px ;
        &.all {
          background: url("../images/f_all.png") no-repeat;
        }
        &.date {
          background: url("../images/f_date.png") no-repeat;
        }
        &.age_group {
          background: url("../images/f_age.png") no-repeat;
        }
        &.gender {
          background: url("../images/f_gender.png") no-repeat;
        }
        &.ethnicity {
          background: url("../images/f_ethnicity.png") no-repeat;
        }
        &.result {
          background: url("../images/f_condition.png") no-repeat;
        }
        &.location {
          background: url("../images/f_location.png") no-repeat;
        }
      }
      span {
        @include box-sizing(border-box);
        font-size: 11px;
        line-height: 50px;
        color: #999999;
        text-align: center;
        border-left: 1px solid #cdcdcd;
        border-right: 1px solid #cdcdcd;
        display: block;
        width: 60px;
        height: 49px;
        position: absolute;
        right: 25px;
        top: 1px;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
    &.expanded {
      background-color: #cccccc;
      padding-bottom: 20px;

      .filter-title {
        position: relative;
        margin-bottom: 15px;
        span {
          border: none;
          color: #333333;
        }
        &:after {
          content: '';
          display: block;
          position: absolute;
          width: 100%;
          height: 7px;
          left: 0;
          bottom: -7px;
          padding: 0 10px 0 15px;
          margin-left: -15px;
          @include gradient-vertical(#b7b7b7, #cccccc);
          @include box-sizing(content-box);
        }
      }

      & + .filter {
        background: url("../images/f_arrow_sep02.png") no-repeat right top;
      }

      &.last {
        margin-bottom: -10px;
      }
    }

    &.first {
      background-image: none;

      .filter-title {
        cursor: default;
        span {
          @include border-top-radius(4px);
          line-height: 30px;
          border-top: 1px solid #cdcdcd;
          top: 15px;
          height: 35px;
        }
      }
      + hr {
        margin-top: 0;
      }
    }

    &.last {
      .filter-title span {
          @include border-bottom-radius(4px);
          border-bottom: 1px solid #cdcdcd;
      }
    }
  }
  hr {
    margin: 10px 0;
  }
  .add-new-filter {
    font-weight: bold;
    padding: 0 15px 10px 15px;

    a {
      /*color: #999999;*/
      text-decoration: none !important;
      span {
        font-size: 20px;
      }
    }

    div {
      padding-top: 5px;
      a {
        text-indent: -999em;
        display: inline-block;
        margin-right: 10px;
        width: 40px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid #eaeaea;
        overflow: hidden;

        &.date {
          background: url("../images/f_date.png") no-repeat center;
        }
        &.age_group {
          background: url("../images/f_age.png") no-repeat center
        }
        &.gender {
          background: url("../images/f_gender.png") no-repeat center;
        }
        &.ethnicity {
          background: url("../images/f_ethnicity.png") no-repeat center;
        }
        &.result {
          background: url("../images/f_condition.png") no-repeat center;
        }
        &.location {
          background: url("../images/f_location.png") no-repeat center;
        }
      }
    }
  }
}

.close {
  border-radius: 50%;
